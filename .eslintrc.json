{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "plugin:react/recommended",
      "standard"
    ],
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "emotion"
    ],
    "rules": {
      "react/prop-types": 0,
      "object-property-newline": 0,
      "prefer-promise-reject-errors": 0,
      "react/jsx-handler-names": 0,
      "emotion/no-vanilla": "error",
      "valid-jsdoc": "off",
      "emotion/syntax-preference": [
        2,
        "string"
      ],
      "indent": [
        "error",
        2
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
}
